---
import { Icon } from '@component/Icon';
import { Link } from '@component/Link';

import { Layout } from '@globals';

import LayersIcon from '@icon/layers.svg';
import GithubIcon from '@icon/github.svg';
import LinkedInIcon from '@icon/linkedin.svg';
import TwitterIcon from '@icon/twitter.svg';
---

<Layout title="Hello" ogTitle="Tayles">
  <section class="flex-1 flex flex-col justify-between">
    <div
      class="max-w-xl mx-auto flex flex-col justify-center items-center flex-1 gap-10"
    >
      <div class="flex items-center">
        <h1 class="text-6xl font-semibold">tayles</h1>
      </div>
      <div class="flex gap-10">
        <Link
          href="https://www.linkedin.com/in/tayles"
          src={LinkedInIcon}
          alt="LinkedIn"
        />
        <Link href="https://github.com/tayles" src={GithubIcon} alt="Github" />
        <Link
          href="https://twitter.com/tayles"
          src={TwitterIcon}
          alt="Twitter"
        />
      </div>
    </div>
  </section>
</Layout>
